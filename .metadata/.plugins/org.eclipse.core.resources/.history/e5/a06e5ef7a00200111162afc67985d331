package work4feb;

public class TestBankAccountSystem {

	public static void main(String[] args) {

		BankAccount account= new BankAccount(101, 500.00);
		
		// Test Case 1: Initial details
        System.out.println("Account Number: " + account.getAccountNumber());
        System.out.println("Balance: " + account.getBalance());

        // Test Case 2: Deposit money
        account.deposit(200.0);
        System.out.println("Balance after deposit: " + account.getBalance());
        account.displayBalance();

        // Test Case 3: Withdraw money (sufficient balance)
        account.withdraw(300.0);
        System.out.println("Balance after withdrawal: " + account.getBalance());
        account.displayBalance();

        // Test Case 4: Withdraw money (insufficient balance)
        account.withdraw(500.0);
        System.out.println("Balance after failed withdrawal: " + account.getBalance());
        account.displayBalance();

        // Test Case 5: Multiple transactions
        account.deposit(100.0);   // Balance?
        account.withdraw(200.0);  // Balance?
        account.deposit(50.0);    // Balance?
        account.withdraw(400.0);  // Error?
        account.displayBalance();

	}

}
