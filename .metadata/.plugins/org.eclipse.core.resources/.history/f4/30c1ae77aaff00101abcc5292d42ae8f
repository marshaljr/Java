package work30jan;

public class StudentConstructor {
	String name;
	int age;
	String collegeName;

	// Parameterized constructor
	StudentConstructor(String n, int a, String c) {
		name = n;
		age = a;
		collegeName = c;
	}
	// Default constructor
	StudentConstructor() {
		name = "Unknown";
		age = 0;
		collegeName = "Unknown";
		
	}
	 // Method to update age (MUTABILITY)
    void updateAge(int newAge) {
        age = newAge;
    }

	void display() {
		System.out.println("Name : " + name);
		System.out.println("Name : " + age);
		System.out.println("Name : " + collegeName);
	}

	public static void main(String[] args) {
		StudentConstructor s1 = new StudentConstructor("Marshal", 20, "PCPS");
		StudentConstructor s2 = new StudentConstructor();
		System.out.println("Before update:");
		s1.display();
		System.out.println("After update:");
s1.updateAge(21);
		s2.display();
	}

}
