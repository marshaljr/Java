package work2feb;

public class Student {
	// private variables (data hiding)
	private String name;
	private int age;

	// setter method (to set values with control)
	void setName(String n) {
		name = n;
	}

	public void setAge(int a) {
		if (a > 0) { // validation
			age = a;
		}
	}

	// getter methods (to read values)
	public String getName() {
		return name;
	}

	public int getAge() {
		return age;
	}

}
