package work4feb;

public class TestStudentInheritance {

	public static void main(String[] args) {
		 // Test Case 1: Create a Student object
        Student student1 = new Student("Ramesh", 20, 15);
        
        // Display both person and student details
        System.out.println("Student 1 Details:");
        student1.displayStudent();

        // Use getter methods to print separately
        System.out.println("\nUsing getters:");
        System.out.println("Name: " + student1.getName());
        System.out.println("Age: " + student1.getAge());
        System.out.println("Roll Number: " + student1.getRollNumber());

        // Trying to access private variables directly (will cause error)
         System.out.println(student1.name); // Error: name has private access
         System.out.println(student1.age);  // Error: age has private access
        System.out.println("\nDirect access to private variables is NOT allowed. Compile-time error occurs.");

        // Test Case 2: Another Student object (your own details)
        Student student2 = new Student("Marshal", 18, 101);
        System.out.println("\nStudent 2 Details:");
        student2.displayStudent();

	}

}
