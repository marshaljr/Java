package work4feb;

public class TestCarInheritance {

	public static void main(String[] args) {
		// Test Case 1: Create a Car object
        Car car1 = new Car("Toyota", 120, 4);

        // Display vehicle and car details
        System.out.println("Car 1 Details:");
        car1.displayCar();

        // Use getter methods to print separately
        System.out.println("\nUsing getters:");
        System.out.println("Brand: " + car1.getBrand());
        System.out.println("Speed: " + car1.getSpeed());
        System.out.println("Number of Doors: " + car1.getNumberOfDoors());

        // Trying to change speed directly (will cause error)
        // car1.speed = 150; // ‚ùå Error: speed has private access
        System.out.println("\nDirectly changing speed without setter is NOT allowed. Compile-time error occurs.");

        // Test Case 2: Another Car object
        Car car2 = new Car("Honda", 100, 2);
        System.out.println("\nCar 2 Details:");
        car2.displayCar();
	}

}
