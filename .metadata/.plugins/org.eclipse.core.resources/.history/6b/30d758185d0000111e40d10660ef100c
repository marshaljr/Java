package work2feb;

public class StudentWithCapsulation {

	public static void main(String[] args) {

		// object creation
		Student s = new Student("Ram", 20);
		// 5. Try to access directly (this WILL FAIL ❌)
        // s.name = "Sita";   // ❌ Compile-time error
        // System.out.println(s.age); // ❌ Compile-time error

        // Correct way ✅ (using methods)

		s.setName("Sita");
		s.setAge(18);
		// reading values using getters
		System.out.println("Name: " + s.getName());
		System.out.println("Age: " + s.getAge());

	}

}
